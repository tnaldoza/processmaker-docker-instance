# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, TypeScript, JSON
[*.{js,jsx,ts,tsx,json,json5}]
indent_style = tab
indent_size = 4
max_line_length = 80

# YAML files (use spaces, not tabs)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4
max_line_length = off

# Package.json files (use spaces for npm compatibility)
[package*.json]
indent_style = space
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 4

# Shell scripts
[*.sh]
indent_style = tab
indent_size = 4
end_of_line = crlf